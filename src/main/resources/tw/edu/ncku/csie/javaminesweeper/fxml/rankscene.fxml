<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<FlowPane fx:id="rankPane" alignment="CENTER" columnHalignment="CENTER" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tw.edu.ncku.csie.javaminesweeper.RankSceneController">
   <children>
      <VBox fx:id="rankVBox" alignment="CENTER" style="-fx-background-color: white;" stylesheets="@../css/rankscene.css">
         <children>
            <Label fx:id="title" alignment="CENTER" text="Score" textAlignment="CENTER">
               <font>
                  <Font name="Microsoft YaHei" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="difficultyLabel" text="Difficulty: Easy">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="Microsoft YaHei" size="14.0" />
               </font>
            </Label>
            <VBox fx:id="rankListVBox" alignment="CENTER" prefWidth="120.0">
               <children>
                  <AnchorPane>
                     <children>
                        <Label text="1. 1 Jan 1960" AnchorPane.leftAnchor="0.0">
                           <font>
                              <Font name="Microsoft Tai Le" size="12.0" />
                           </font></Label>
                        <Label alignment="CENTER_RIGHT" text="114514s" AnchorPane.rightAnchor="0.0">
                           <font>
                              <Font name="Microsoft YaHei" size="12.0" />
                           </font></Label>
                     </children>
                  </AnchorPane>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
               </VBox.margin>
            </VBox>
            <MFXButton fx:id="rankButton" alignment="CENTER" contentDisplay="CENTER" depthLevel="LEVEL1" minHeight="30.0" onAction="#rankButtonClick" prefWidth="120.0" text="" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Microsoft YaHei" size="14.0" />
               </font>
               <graphic>
                  <Label fx:id="title1" alignment="CENTER" contentDisplay="CENTER" text="Got it!" textAlignment="CENTER">
                     <font>
                        <Font name="Microsoft YaHei" size="14.0" />
                     </font>
                  </Label>
               </graphic></MFXButton>
         </children>
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</FlowPane>
