<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<FlowPane alignment="CENTER" columnHalignment="CENTER" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tw.edu.ncku.csie.javaminesweeper.RankSceneController">
   <children>
      <VBox alignment="CENTER" style="-fx-background-color: white;">
         <children>
            <Label fx:id="title" alignment="CENTER" text="Great!" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="difficultyLabel" text="Difficulty: Easy">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <VBox fx:id="rankListVBox" alignment="CENTER" prefWidth="120.0">
               <children>
                  <AnchorPane>
                     <children>
                        <Label text="1. 1 Jan 1960" AnchorPane.leftAnchor="0.0" />
                        <Label alignment="CENTER_RIGHT" text="7s" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
                  <AnchorPane>
                     <children>
                        <Label text="2. 29 Feb 2000" AnchorPane.leftAnchor="0.0" />
                        <Label alignment="CENTER_RIGHT" text="24s" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
                  <AnchorPane>
                     <children>
                        <Label text="3. 31 Aug 2023" AnchorPane.leftAnchor="0.0" />
                        <Label alignment="TOP_RIGHT" text="99m99s" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </VBox>
            <MFXButton fx:id="okButton" alignment="CENTER" depthLevel="LEVEL1" minHeight="30.0" onAction="#goMenu" prefWidth="120.0" text="Got it!" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></MFXButton>
         </children>
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</FlowPane>
